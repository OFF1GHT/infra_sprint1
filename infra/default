server {
    server_name infrasprint1.hopto.org;

 location /api/ {
    proxy_pass http://127.0.0.1:8080;
    client_max_body_size 20M;
 }

 location /admin/ {
    proxy_pass http://127.0.0.1:8080;
    client_max_body_size 20M;
 }

 location /media/ {
    alias /var/www/kittygram/media/;
 }

 location / {
    root   /var/www/kittygram;
    index  index.html index.htm;
    try_files $uri /index.html;
 }



    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/infrasprint1.hopto.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/infrasprint1.hopto.org/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
    if ($host = infrasprint1.hopto.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    server_name infrasprint1.hopto.org;
    listen 80;
    return 404; # managed by Certbot


}
